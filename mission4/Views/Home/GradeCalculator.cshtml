@model GradeModel

<p class="title" >Grade Calculator</p>
<form class="box" method="post">
    <p>Input your results as percentages below: </p><br /><br />
    <div class="field">
        <label class="label">Assignments</label>
        <div class="control">
            <input asp-for="assignments" name="assignments" id="assignments" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <div class="field">
        <label class="label">Group Project</label>
        <div class="control">
            <input asp-for="groupProject" id="groupproject" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <div class="field">
        <label class="label">Quizzes</label>
        <div class="control">
            <input asp-for="quizzes" id="quizzes" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <div class="field">
        <label class="label">Midterm Exam</label>
        <div class="control">
            <input asp-for="midterm"  id="midterm" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <div class="field">
        <label class="label">Final Exam</label>
        <div class="control">
            <input asp-for="final" id="final" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <div class="field">
        <label class="label">INTEX</label>
        <div class="control">
            <input asp-for="intex" id="intex" class="input" type="number" placeholder="input as a whole number with no percent (ex. 50% = 50)">
        </div>
    </div>

    <button class="button is-primary" id="btnSend" type="submit">Calculate</button><br /><br />
    <p class="subtitle is-5">Your Expected Final Grade</p>
    <p id="finalGrade" class="title"></p>
    <div asp-validation-summary="All">

    </div>
</form>


